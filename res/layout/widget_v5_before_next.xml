<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layoutAnimation="@anim/v5_layout_out"
        android:gravity="right"
        android:layout_gravity="right"
        >

        <ImageView
            android:id="@+id/v5_widget_weather_icon_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" 
            android:layout_marginRight="@dimen/v5_widget_weather_icon_before_margin_right"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal" 
            android:layout_marginRight="@dimen/v5_widget_temp_before_margin_right"
            >

            <ImageView
                android:id="@+id/v5_widget_temp_range_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                />

            <ImageView
                android:id="@+id/v5_widget_temp_degree_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <ImageView
                android:id="@+id/v5_widget_AQI_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginRight="@dimen/v5_widget_AQI_before_margin_right"
                android:layout_marginTop="@dimen/v5_widget_AQI_before_margin_top"
                />
    </LinearLayout>