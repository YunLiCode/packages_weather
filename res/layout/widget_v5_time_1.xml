<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="5dip"
    >
	<LinearLayout
	    android:id="@+id/time_container" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="left"
	    android:layout_marginTop="@dimen/v5_widget_time_margin_top"
	    >
	    <LinearLayout
	        android:id="@+id/v5_widget_time_container" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
			    <ImageView 
			        android:id="@+id/v5_widget_time_hour1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:scaleType="center"
			        />
			     <ImageView 
			        android:id="@+id/v5_widget_time_hour2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:scaleType="center"
			        />
			     <ImageView 
			        android:id="@+id/v5_widget_time_divider"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:scaleType="center"
			        android:layout_marginTop="@dimen/v5_widget_divider_margin_top"
			        android:src="@drawable/v5_widget_time_divider"
			        />
			     <ImageView 
			        android:id="@+id/v5_widget_time_minute1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:scaleType="center"
			        />
			     <ImageView 
			        android:id="@+id/v5_widget_time_minute2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:scaleType="center"
			        />
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/v5_widget_date" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="9dp"
	        >
		    <ImageView 
		        android:id="@+id/v5_widget_date_solar"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
		    <ImageView 
		        android:id="@+id/v5_widget_date_lunar"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        />
	    </LinearLayout>
	     <LinearLayout
	        android:id="@+id/v5_widget_week_ll"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="8dp"
	        android:gravity="left"
	        >
	     <ImageView 
	        android:id="@+id/v5_widget_week"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        />
	     </LinearLayout>
	</LinearLayout>
</RelativeLayout>