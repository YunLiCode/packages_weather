<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<LinearLayout
	    android:id="@+id/time_container" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginLeft="15dp"
	    android:gravity="left"
	    >
	    <LinearLayout
	        android:id="@+id/v5_widget_time_container" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
			    <ImageView 
			        android:id="@+id/v5_widget_time_hour1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:scaleType="center"
			        />
			     <ImageView 
			        android:id="@+id/v5_widget_time_hour2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:scaleType="center"
			        />
			     <ImageView 
			        android:id="@+id/v5_widget_time_divider"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:scaleType="center"
			        android:layout_marginTop="13dip"
			        android:src="@drawable/v5_widget_time_divider"
			        />
			     <ImageView 
			        android:id="@+id/v5_widget_time_minute1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:scaleType="center"
			        />
			     <ImageView 
			        android:id="@+id/v5_widget_time_minute2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:scaleType="center"
			        />
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/v5_widget_date" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="10dp"
	        >
		    <ImageView 
		        android:id="@+id/v5_widget_date_solar"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
		    <ImageView 
		        android:id="@+id/v5_widget_date_lunar"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        />
	    </LinearLayout>
	     <ImageView 
	        android:id="@+id/v5_widget_week"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="10dp"
	        />
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/weather_container" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="15dp"
	    android:orientation="vertical"
	    android:gravity="right"
	    android:layout_alignParentTop="true"
	    >
	    <ImageView 
	        android:id="@+id/v5_widget_weather_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:layout_marginTop="5dp"
	        android:id="@+id/v5_widget_temp_container"
	        >
		    <ImageView 
		        android:id="@+id/v5_widget_temp_range"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
		    <ImageView 
		        android:id="@+id/v5_widget_temp_degree"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/v5_widget_degree"
		        />
	    </LinearLayout>
	    <ImageView 
	        android:id="@+id/v5_widget_AQI"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:layout_gravity="right"
	        android:layout_marginTop="5dp"
	        />
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:id="@+id/v5_widget_city_container"
	        >
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/v5_location_background"
		        android:orientation="horizontal"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_marginTop="5dp"
		        android:gravity="center_horizontal"
		        >
		        <ImageView
		            android:id="@+id/v5_widget_location_icon" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/v5_widget_location_icon"
		            />
		        <ImageView
		            android:id="@+id/v5_widget_city" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            />
		    </LinearLayout>
	    </LinearLayout>
	    
	</LinearLayout>
</RelativeLayout>