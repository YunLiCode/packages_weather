        <ImageView 
            android:id="@+id/lewa_weather_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bg_icon_height"
            android:layout_marginTop="@dimen/app_bg_icon_margin"
            />
        <LinearLayout 
            android:id="@+id/lewa_weather_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lewa_weather_second"
            android:layout_marginTop="@dimen/app_bg_condition_margin"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >
             <TextView
                android:id="@+id/lewa_weather_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="45dp"
                android:textColor="@android:color/white"
                android:layout_gravity="bottom"
                />
              <com.lewa.weather.MarqueeTextView
                android:id="@+id/lewa_weather_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:singleLine="true"
	            android:ellipsize="marquee"
	            android:focusableInTouchMode="true"
				android:scrollHorizontally="true"
	            android:focusable="true"
	            android:clickable="true"
                />
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/lewa_weather_other_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_bg_condition_margin"
            android:layout_below="@id/lewa_weather_third"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/lewa_app_other_bg"
                >
	        <TextView 
	            android:id="@+id/lewa_weather_other_temp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:textSize="15dp"
	            android:alpha="0.9"
	            />
	         <com.lewa.weather.MarqueeTextView 
	            android:id="@+id/lewa_weather_other_wind"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:textSize="15dp"
	            android:singleLine="true"
	            android:ellipsize="marquee"
	            android:marqueeRepeatLimit="marquee_forever"
	            android:focusableInTouchMode="true"
				android:scrollHorizontally="true"
	            android:focusable="true"
	            android:alpha="0.9"
	            />
	         </LinearLayout>
        </RelativeLayout>
          <TextView 
            android:id="@+id/lewa_weather_pubDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lewa_weather_other_parent"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:alpha="0.45"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/app_bg_pubdate_margin"
            />
    </RelativeLayout>
      
