<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/lewa_weather_imgbg_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bg_height"
        />
    <ImageView 
        android:id="@+id/lewa_weather_imgbg_first"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bg_height"
        />
    
     <android.support.v4.view.ViewPager
         android:id="@+id/mviewpager"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         >
     </android.support.v4.view.ViewPager>
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="top"
         >
	        <LinearLayout 
	            android:id="@+id/lewa_weather_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginLeft="@dimen/app_bg_city_margin"
	            android:layout_marginTop="5dip"
	            >
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                >
	                <ImageView 
	                    android:id="@+id/locate_icon"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/locate_icon"
	                    android:visibility="gone"
	                    android:layout_gravity="center"
	                    />
		            <com.lewa.weather.MarqueeTextView
		                android:id="@+id/lewa_weather_city"
		                android:layout_width="@dimen/weather_city_width"
		                android:layout_height="wrap_content"
		                android:textColor="@android:color/white"
		                android:layout_gravity="top"
		                android:gravity="top"
		                android:layout_marginLeft="3dp"
		                android:textSize="23dp"
		                android:singleLine="true"
		                android:ellipsize="marquee"
		                android:marqueeRepeatLimit="marquee_forever" 
				        android:focusableInTouchMode="true" 
				        android:scrollHorizontally="true"
				        android:focusable="true" 
		                />
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                >
	                <ImageView 
	                    android:id="@+id/lewa_weather_pm_icon"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    />
		            <TextView
		                    android:id="@+id/lewa_weather_air"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:textColor="@android:color/white"
		                    android:textSize="14dp"
		             />
	            </LinearLayout>
	            <TextView 
	                android:id="@+id/lewa_weather_AQ"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="14dp"
	                android:layout_marginLeft="4dp"
	                android:textColor="@android:color/white"
	                />
	        </LinearLayout>
	        <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_toRightOf="@+id/lewa_weather_title"
	                android:layout_marginTop="@dimen/app_bg_setting_margin"
	                android:layout_marginRight="5dp"
	                android:gravity="right|top"
	                >
	               <FrameLayout 
	                   android:layout_width="@dimen/app_bg_setting_width"
	                   android:layout_height="@dimen/app_bg_setting_width"
	                   android:layout_marginRight="5dp"
	                   >
	               <ImageView
	                     android:id="@+id/lewa_weather_refresh" 
	                     android:layout_width="@dimen/app_bg_setting_width"
	                     android:layout_height="@dimen/app_bg_setting_width"
	                     android:src="@drawable/lewa_refresh_selector"
	                     />
	               </FrameLayout>
	               <ImageView 
	                     android:id="@+id/lewa_weather_setting"
	                     android:layout_width="@dimen/app_bg_setting_width"
	                     android:layout_height="@dimen/app_bg_setting_width"
	                     android:layout_marginLeft="5dp"
	                     android:src="@drawable/lewa_setting_selector"
	               />
	            </LinearLayout>
     </RelativeLayout>
     <!--  <HorizontalScrollView 
         android:id="@+id/horizonView"
         android:layout_width="match_parent"
         android:layout_height="@dimen/app_gridview_height"
         android:gravity="center|bottom"
         android:layout_gravity="center|bottom"
         android:background="@drawable/lewa_weather_forcastbg"
         android:scrollbars="none"
         > --> 
	         <LinearLayout   
	            android:layout_width="fill_parent"  
	            android:layout_height="@dimen/app_gridview_height"  
                 android:layout_gravity="center|bottom"
                 android:background="@drawable/lewa_weather_forcastbg" 
	            android:orientation="horizontal"> 
		       <com.lewa.weather.view.MyGridView 
		         android:id="@+id/lewa_weather_forecast"
		         android:layout_width="wrap_content"
		         android:layout_height="match_parent"
		         android:columnWidth="20dp"
		         android:clickable="false"
		         android:listSelector="@android:color/transparent"
		         ></com.lewa.weather.view.MyGridView> 
         </LinearLayout>
		         <!--  
         </HorizontalScrollView>-->
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_gravity="bottom|center_horizontal"
         >
         <ImageView 
             android:id="@+id/lewa_grid_line"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:src="@drawable/lewa_grid_line"
             android:scaleType="fitXY"
             />
	     <LinearLayout 
	        android:id="@+id/guidemark"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal"
	         ></LinearLayout>
     </LinearLayout>
</FrameLayout>