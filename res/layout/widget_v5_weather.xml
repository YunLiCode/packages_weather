<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right" 
    android:paddingTop="@dimen/v5_widget_weather_padding_top"
    >
    
    <LinearLayout 
        android:id="@+id/v5_widget_weather_before"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:layout_marginTop="@dimen/v5_widget_weather_before_margin_top"
        >
    </LinearLayout>
	<FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginRight="@dimen/v5_widget_frame_margin_right"
	    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/v5_widget_icon_ll"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="right"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/v5_widget_weather_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" />

                <LinearLayout
                    android:id="@+id/v5_widget_temp_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="2dp" >

                    <ImageView
                        android:id="@+id/v5_widget_temp_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/v5_widget_temp_degree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

      <!--  <LinearLayout
            android:id="@+id/v5_widget_city_container"
            android:layout_width="@dimen/v5_widget_city_container_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"
            android:gravity="right"
            android:orientation="vertical"
             > --> 

            <LinearLayout
                android:id="@+id/v5_widget_city_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/v5_widget_citybg_selector"
                android:gravity="center_horizontal"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:paddingRight="5dp" 
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_marginRight="0dp"
                >

                <ImageView
                    android:id="@+id/v5_widget_location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/v5_widget_location_icon" 
                    />

                <ImageView
                    android:id="@+id/v5_widget_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/v5_widget_AQI_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginTop="70dp"
        android:layout_marginRight="2dp"
        android:gravity="right"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <ImageView
                android:paddingTop="13dp"
                android:id="@+id/v5_widget_AQI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:scaleType="fitStart"
                />
        </LinearLayout>
    </LinearLayout>
	</FrameLayout>
</FrameLayout>