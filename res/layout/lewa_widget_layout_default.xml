<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:paddingTop="@dimen/widget_padding_top"
    android:gravity="center_horizontal"
    >
    <LinearLayout
    android:layout_width="@dimen/widget_width"
    android:layout_height="@dimen/widget_height"
    android:orientation="vertical" 
    android:layout_gravity="center_horizontal"
    >
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_first_bg_height"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
         <ImageView 
            android:id="@+id/lewa_widget_bg_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
         </LinearLayout>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             >
		    <ImageView 
		        android:id="@+id/lewa_widget_bg"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:scaleType="fitXY"
		        />
	    </LinearLayout>
	      
       <TextView
           android:id="@+id/lewa_widget_moment" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="12dp"
           android:layout_marginLeft="@dimen/widget_moment_margin_left"
           android:layout_marginTop="@dimen/widget_moment_margin_top"
           android:textColor="@android:color/white"
           />
    
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        >
        <LinearLayout 
            android:id="@+id/lewa_widget_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/widget_time_marginleft"
            android:layout_marginTop="@dimen/widget_time_margintop"
            android:orientation="horizontal"
            >
         
        <ImageView 
             android:id="@+id/widget_time_hour1"
             android:layout_width="@dimen/widget_time_width"
             android:layout_height="@dimen/widget_time_height"
            />
        <ImageView 
             android:id="@+id/widget_time_hour2"
             android:layout_width="@dimen/widget_time_width"
             android:layout_height="@dimen/widget_time_height"
            />
            <ImageView 
             android:id="@+id/widget_time_divider"
             android:layout_width="@dimen/widget_time_width_divider"
             android:layout_height="@dimen/widget_time_height"
             android:src="@drawable/num_divider"
            />
          <ImageView 
             android:id="@+id/widget_time_minute1"
             android:layout_width="@dimen/widget_time_width"
             android:layout_height="@dimen/widget_time_height"
            />
            <ImageView 
             android:id="@+id/widget_time_minute2"
             android:layout_width="@dimen/widget_time_width"
             android:layout_height="@dimen/widget_time_height"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lewa_widget_ptm" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lewa_widget_time"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/widget_ptm_margintop"
            android:orientation="vertical"
            >
            <FrameLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_ptm_frame_marginleft"
                >
	            <ImageView 
	                android:id="@+id/lewa_widget_pm_bg"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                />
                <TextView 
                    android:id="@+id/lewa_widget_pm_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/widget_pm_text_marginleft"
                    android:textSize="@dimen/widget_pm_textsize"
                    android:singleLine="true"
                    />
        </FrameLayout>    
            <TextView 
                android:id="@+id/lewa_widget_temp"
                android:layout_width="@dimen/widget_temp_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/widget_pm_textsize"
                android:layout_marginLeft="@dimen/widget_temp_marginleft"
                android:singleLine="true"
                />
            
        </LinearLayout>
        </RelativeLayout>
	        <ImageView 
	            android:id="@+id/lewa_widget_weather_img2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
                android:layout_marginRight="@dimen/widget_weather_marginright"
	            android:layout_marginTop="@dimen/widget_weather_margintop"
	            android:scaleType="center"
	            />
    </FrameLayout>
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_second_bg_height"
        >
	   <ImageView
	     android:id="@+id/lewa_widget_bg_white" 
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     android:scaleType="fitXY"
	     android:src="@drawable/lewa_widget_bg_white"
	     />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >
        <TextView android:id="@+id/lewa_widget_calendar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/widget_calendar_marginleft"
            android:textColor="#737272"
            android:textSize="@dimen/widget_calendar_textsize"
            android:layout_marginTop="@dimen/widget_calendar_margintop"
            />
        <RelativeLayout
            android:id="@+id/icon_city_rl" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/lewa_widget_calendar"
            android:layout_marginTop="@dimen/widget_calendar_margintop"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/widget_city_margin_left"
            >
         <ImageView
             android:id="@+id/locate_widget_icon" 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/locate_widget"
             android:layout_marginTop="@dimen/widget_locate_icon_top"
             android:visibility="gone"
             />
       <TextView 
            android:id="@+id/lewa_widget_city"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_city_height"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/locate_widget_icon"
            android:gravity="center_horizontal"
            android:textColor="#737272"
            android:textSize="@dimen/widget_calendar_textsize"
            android:background="@null"
            />
        </RelativeLayout>
        </RelativeLayout>
         </FrameLayout>
    </LinearLayout>
</RelativeLayout>